# While there is no search feature scrollback feature
# See https://github.com/ghostty-org/ghostty/issues/189#issuecomment-2588366699
keybind = cmd+f=write_scrollback_file:open
scrollback-limit = 20000000

# Color theme
theme = Banana Blueberry

# Unfocused splits
unfocused-split-fill = 222200

# Quick terminal settings
quick-terminal-screen = macos-menu-bar
quick-terminal-autohide = false

# Confirm on quit
confirm-close-surface = always

# Load keybinds
config-file = keybinds

# Tab settings
window-new-tab-position = end

# Save window state
window-save-state = always
