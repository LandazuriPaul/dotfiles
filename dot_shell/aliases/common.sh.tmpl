# Chezmoi
alias cm='chezmoi'
alias cmlogin='. ~/.shell/scripts/cm-login'

# General aliases
alias git='LANG=en_GB.UTF-8 git'
alias nv='nvim'
alias l='ll'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
